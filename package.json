{
  "private": true,
  "name": "@samchon/bbs-backend",
  "version": "4.0.0",
  "description": "Backend for bbs",
  "scripts": {
    "benchmark": "rimraf prisma/migrations && node bin/test/benchmark",
    "test": "rimraf prisma/migrations && node bin/test",
    "------------------------BUILDS------------------------": "",
    "build": "npm run build:prisma && npm run build:sdk && npm run build:main && npm run build:test",
    "build:api": "rimraf packages/api/lib && nestia sdk && tsc -p packages/api/tsconfig.json && rollup -c packages/api/rollup.config.js",
    "build:env": "ts-node build/env.ts",
    "build:main": "rimraf lib && tsc",
    "build:prisma": "prisma generate --schema=prisma/schema",
    "build:sdk": "rimraf src/api/functional && nestia sdk",
    "build:swagger": "nestia swagger",
    "build:test": "rimraf bin && tsc -p test/tsconfig.json",
    "dev": "npm run build:test -- --watch",
    "eslint": "eslint src && eslint test",
    "eslint:fix": "eslint src --fix && eslint test --fix",
    "prepare": "ts-patch install && npm run build:env && npm run build:prisma",
    "prettier": "prettier src --write && prettier test --write",
    "------------------------WEBPACK------------------------": "",
    "webpack": "rimraf dist && npm run build:prisma && webpack",
    "webpack:start": "node dist/server",
    "webpack:test": "npm run webpack && rimraf prisma/migrations && node bin/test/webpack.js",
    "------------------------DEPLOYS------------------------": "",
    "package:api": "npm run build:swagger && npm run build:api && cd packages/api && npm publish --access public",
    "start": "node lib/executable/server",
    "start:dev": "nest start --watch",
    "start:swagger": "ts-node src/executable/swagger.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/samchon/bbs-backend"
  },
  "author": "Samchon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samchon/bbs-backend/issues"
  },
  "homepage": "https://github.com/samchon/bbs-backend",
  "devDependencies": {
    "@nestia/benchmark": "^8.0.1",
    "@nestia/e2e": "^8.0.1",
    "@nestia/sdk": "^8.0.1",
    "@nestjs/cli": "^11.0.10",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cli": "^0.11.19",
    "@types/cli-progress": "^3.11.5",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^8.2.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.22",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "cagen": "^1.0.1",
    "chalk": "^4.1.2",
    "cli": "^1.0.1",
    "cli-progress": "^3.12.0",
    "copy-webpack-plugin": "^12.0.2",
    "eslint-plugin-deprecation": "^2.0.0",
    "inquirer": "^8.2.5",
    "nestia": "^8.0.1",
    "prettier": "^3.2.5",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma-markdown": "^3.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^4.18.0",
    "sloc": "^0.2.1",
    "swagger-ui-express": "^5.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "ts-patch": "^3.3.0",
    "typescript": "~5.9.2",
    "typescript-transform-paths": "^3.5.5",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "dependencies": {
    "@nestia/core": "^8.0.1",
    "@nestia/fetcher": "^8.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "@prisma/client": "^6.16.0",
    "bcryptjs": "^3.0.2",
    "commander": "10.0.0",
    "csv-parse": "^5.5.3",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "fastify": "^4.25.2",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.16.0",
    "serialize-error": "^4.1.0",
    "source-map-support": "^0.5.19",
    "tgrid": "^1.2.0",
    "tstl": "^3.0.0",
    "typia": "^9.7.2",
    "uuid": "^10.0.0"
  }
}
